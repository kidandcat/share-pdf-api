doctype
html
    head
      title PDF test
      style.
        * { margin:0; padding:0; } 

        html, body { width:100%; height:100%; } 
        body{
            display: flex;
        }
        .scroll{
            width: 100%;
            overflow-y: scroll;
            overflow-x: hidden;
        }
        .button1 {
            position: fixed;
            top: 0;
            left: 0;
            width:50%;
            height: 25px;
        }
        .button2 {
            position: fixed;
            top: 0;
            right: 0;
            width:50%;
            height: 25px;
        }
        canvas {
            outline: 0px;
            position: relative;
            left: 0px;
            top: 20px;
            width: 100%;
            height: auto;
        }

    body
      button#prev.button1 <
      button#next.button2 >
      div.scroll
          canvas#the-canvas(style='border:1px solid black')
      script(src='/pdf.js')
      script var url = '/pdf/#{ pdf }';
      script(src='/pdf-control.js')
      script(src='/pdf-sync-master.js')
      script.
        document.getElementById('prev').addEventListener('click', pPage);
        document.getElementById('next').addEventListener('click', nPage);